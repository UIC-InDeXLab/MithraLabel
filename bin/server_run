#!/bin/bash
# gnl

git reset --hard HEAD
sudo git pull
sudo rm var/uploads/tempdata.csv
sudo rm gnl/static/js/bundle.js
sudo rm gnl/static/data/*
source env/bin/activate
node_modules/.bin/webpack
node_modules/.bin/javascript-obfuscator gnl/static/js/bundle.js
mv gnl/static/js/bundle-obfuscated.js gnl/static/js/bundle.js
pkill -f gunicorn
gunicorn -b localhost:8000 -D -w 1 -t 150 gnl:app